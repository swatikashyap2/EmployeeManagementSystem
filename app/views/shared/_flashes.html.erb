<% if notice %>
  <div class="alert alert-info alert-dismissible  alert-float fade show m-1" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-warning alert-dismissible  alert-float fade show m-1" role="alert">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
<script>
  $(function() {
    $('.alert-float').slideDown().delay(3000).slideUp();
  });
  $('.alert .close').click(function(){
    $('.alert').slideUp();
  });
</script>