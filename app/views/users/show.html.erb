<section>
    <div class="container py-5">
        <div class="row">
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                     <% if @user.present?%>
                        <% if @user.avatar.attached? %>
                            <%= image_tag @user.avatar, class:'rounded-circle img-height'%>
                        <%else%>
                            <%= image_tag 'placeholder.jpg', class: 'rounded-circle img-height' %>
                        <%end%>
                    <%end%>
                    <div class="mt-1">
                        <label class="label-font-color"><b>Name :</b></label>
                        <%= @user.first_name.present? ? @user.first_name.titleize  : "N/A"%> 
                    </div>
                    <div class="mt-1">
                        <label class="label-font-color"><b>Last Name :</b></label>
                        <%= @user.last_name.present? ? @user.last_name.titleize  : "N/A"%> 
                    </div>
                    <div class="mt-1">
                        <label class="label-font-color"><b>Email :</b></label>
                        <%= @user.email.present? ? @user.email : "N/A"%>
                    </div>
                    <div class="mt-1">
                        <label class="label-font-color"><b>Employee Code :</b></label>
                        <%= @user.employee_code.present? ? @user.employee_code : "N/A"%>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Role</p>
                        </div>
                        <div class="col-sm-9">
                            <%= @user.role.present? ? @user.role.name.titleize : "N/A"%>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Designation</p>
                        </div>
                        <div class="col-sm-9">
                            <%= @user.designation.present? ? @user.designation.titleize : "N/A"%>
                        </div>
                    </div>
                    <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Gender</p>
                            </div>
                            <div class="col-sm-9">
                                <%= @user.gender.present? ? @user.gender.titleize : "N/A"%>
                            </div>
                        </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Reporting Manager</p>
                        </div>
                        <div class="col-sm-9">
                            <%= @user.reporting_manager.present? ? @user.reporting_manager.first_name.titleize : "N/A"%>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Phone</p>
                        </div>
                        <div class="col-sm-9">
                        <%= @user.phone.present? ? @user.phone : "N/A"%>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Date Of Birth</p>
                        </div>
                        <div class="col-sm-9">
                            <%= @user.dob.present? ? @user.dob : "N/A"%>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Address</p>
                        </div>
                        <div class="col-sm-9">
                            <%= @user.address.present? ? @user.address : "N/A"%>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Zip Code</p>
                        </div>
                        <div class="col-sm-9">
                            <%= @user.zip_code.present? ? @user.zip_code : "N/A"%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</section>