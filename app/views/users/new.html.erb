</style>
<script>
    $('.datepicker').datepicker(){
	        format: 'mm-dd-yyyy'
	}
  // Wait for the document to be ready
  $( document ).ready(function() {
    // Attach keyup event to the email input field
    $('#user_email').on('keyup', function() {
      // Get the entered email
      var email = $(this).val();

      // Perform an AJAX request to check for duplication
      $.ajax({
        url: '/users/check_email_duplication',
        type: 'GET',
        data: { email: email },
        success: function(response) {
          // Handle the response from the server
          if (response.exists) {
            // Display an error message for duplicate email
            $('#email-error-message').text('Email is already taken');
          } else {
            // Clear the error message if the email is not duplicate
            $('#email-error-message').text('');
          }
        },
        error: function(error) {
          console.log('Error checking email duplication:', error);
        }
      });
    });

    // Attach a click event to the submit button
    $('form').on('submit', function(event) {
      // Get the entered email
      var email = $('#user_email').val();

      // Perform an AJAX request to check for duplication before form submission
      $.ajax({
        url: '/users/check_email_duplication',
        type: 'GET',
        data: { email: email },
        success: function(response) {
          // Handle the response from the server
          if (response.exists) {
            // Display an error message for duplicate email
            $('#email-error-message').text('Email is already taken');
            // Prevent the form submission
            event.preventDefault();
          } else {
            // Clear the error message if the email is not duplicate
            $('#email-error-message').text('');
          }
        },
        error: function(error) {
          console.log('Error checking email duplication:', error);
        }
      });
    });
  });

</script>
