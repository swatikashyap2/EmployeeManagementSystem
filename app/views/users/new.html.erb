<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0"></h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><%= link_to "Users", users_path %></li>
					<li class="breadcrumb-item active">Create user</li>
				</ol>
			</div>
		</div>
	</div>
</div>
<h2>New User</h2>
	<div class="card">
		<div class="card-body">
			<%= form_for @user do|f|%>
				<div class="row">
					<div class="col-md-6 col-md-6 field mb-2">
						<%= f.label :first_name %><br />
						<%= f.text_field :first_name,  autocomplete: "first_name", class: "form-control", placeholder: "Enter first name", required: true %>
					</div>
					<div class="col-md-6 col-md-6 field mb-2">
						<%= f.label :last_name %><br />
						<%= f.text_field :last_name,  autocomplete: "last_name", class: "form-control", placeholder: "Enter last name" %>
					</div>
					
					<div class="col-md-6 field mb-2">
						<%= f.label :email %><br />
						<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email",required: true, uniq: true %>
					</div>

					<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
						<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
					<% end %>

					<div class="col-md-6 field mb-2">
						<%= f.label :phone %><br />
						<%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control", placeholder: "Enter phone no",required: true %>
					</div>

					<div class="col-md-6 field mb-2">
						<%= f.label :employee_code %><br />
						<%= f.text_field :employee_code, autofocus: true, autocomplete: "employee_code",  class: "form-control", placeholder: "Enter employee code",required: true %>
					</div>

					<div class="col-md-6 field mb-2">
						<%= f.label :dob %><br />
						<%= f.text_field :dob, autofocus: true, autocomplete: "dob",  class: "form-control", placeholder: "Enter date of birth"  %>
					</div>

					<div class="col-md-6 field mb-2">
						<%= f.label :role %><br />
						<%= f.select :role_id, options_for_select(Role.all.collect{|role|[role.name, role.id]}),{include_blank: '--Select role--'}, {class: "form-control",required: true } %>
					</div>

					<div class=" col-md-6 field mb-2">
						<%= f.label :zip_code %><br />
						<%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code", class: "form-control", placeholder: "Enter zip-code"   %>
					</div>

					<div class="field mb-2">
						<%= f.label :address %><br />
						<%= f.text_area :address, autofocus: true, autocomplete: "address", class: "form-control", placeholder: "Enter address",required: true %>
					</div>


					<div class="field mb-2">
						<%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
						<%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Create password",required: true %>
						<% if @minimum_password_length %>
							<br />
							<em><%= @minimum_password_length %> characters minimum</em>
						<% end %>
					</div>

					<div class="field mb-2">
						<%= f.label :password_confirmation %><br />
						<%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control", placeholder: "Confirm password",required: true%>
					</div>

					<div class="field mt-2">
						<%= f.submit "save", class: "btn btn-sm btn-primary" %>
					</div>	
				</div>
			<% end %>
		</div>
	</div>
</div>
	
