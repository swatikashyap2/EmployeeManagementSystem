<div class="content-header">
	<div class="container-fluid">
		<div class="row">
			<div class="col">
				<div class="d-flex justify-content-between">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><%= link_to "Dashboard", home_index_path %></li>
						<li class="breadcrumb-item active">Roles</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<table class='table'>
			<thead> 
				<th>Name</th>
				<th>No. Of Employees</th>
			</thead>
			<tbody>
				<% if @roles.present?%>
					<% @roles.each do|role|%>
						<tr>
							<td>
								<%= role.name.present? ? role.name.titleize : "N/A"%>
							</td>
							<td>
								<%= role.users.present? ? role.users.count : "N/A"%>
							</td>
						</tr>
					<%end%>
				<%else%>
					<tr>
						<td colspan="12" class="text-center border-0">
							<h2 class="mt-3">Record Not Found</h2>
						</td>
					</tr>
				<%end%>
			</tbody>
		</table>
	</div>
</div>



  