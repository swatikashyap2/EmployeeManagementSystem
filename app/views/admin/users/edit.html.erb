<h2>Edit User</h2>
<div class="card">
	<div class="card-body">
    <%= form_for [:admin, @user], controller: 'admin/users', action: :edit do|f|%>
      <div class="field">
				<%= f.label :name %><br />
				<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
			</div>
			
			<div class="field">
				<%= f.label :email %><br />
				<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
			</div>

			<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
			<% end %>

			<div class="field">
				<%= f.label :phone %><br />
				<%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
			</div>

			<div class="field">
				<%= f.label :address %><br />
				<%= f.text_field :address, autofocus: true, autocomplete: "address" %>
			</div>

			<div class="field">
				<%= f.label :zip_code %><br />
				<%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code" %>
			</div>
			
			<div class="field">
				<%= f.label :employee_code %><br />
				<%= f.text_field :employee_code, autofocus: true, autocomplete: "employee_code" %>
			</div>

			<div class="field">
				<%= f.label :dob %><br />
				<%= f.text_field :dob, autofocus: true, autocomplete: "dob" %>
			</div>
		<% end %>
	</div>
</div>
	
